/* pages/person/person.wxss */
page{
  background: #f2f2f2;
  padding-bottom: 100rpx;
  color: #373737;
}
.arrow{
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #7e7e7e;
  border-right: 2rpx solid #7e7e7e;
  position: absolute;
  right: 30rpx;
  transform: rotate(45deg);
  top: 42rpx;
}
.price-unit{
  font-size: 20rpx;
}
.item-space{
  margin-top: 10rpx;
}

/*用户信息*/
.person-user{
  width: 100%;
  height: 210rpx;
  background: -webkit-linear-gradient(top, #ff7841, #ff6847); 
  padding: 37rpx 30rpx;
  position: relative;
}
.person-user .avatorImg{
  width: 137rpx;
  height: 137rpx;
  float: left;
  margin-right: 50rpx;
  border-radius: 50%;
}
.person-user .user-info{
  width: 262rpx;
  float: left;
  font-size: 34rpx;
  color: #ffffff;
  line-height: 50rpx;
  padding-top: 18rpx;
}
.person-user .user-info .name-top{
  margin-top: 25rpx;
}
.person-user .user-info > view:last-child{
  font-family: Arial;
}
.person-user .user-perfect{
  float: right;
  font-size: 24rpx;
  width: 180rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: #ffffff;
  border-radius: 30rpx;
  margin-top: 45rpx;
}


/*用户导航*/
.person-item{
  position: relative;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #ffffff;
  padding: 0 78rpx 0 26rpx;
   border-bottom: 1rpx solid #eaeaea; 
  font-size: 28rpx;
  overflow: hidden;
  /* border-radius: 0rpx;
  border: 0rpx; */
}
button::after {
    border-radius: 0;
    border: none;
}
button{
    border-radius: 0;
     border: none;
}
.person-item > image{
  float: left;
  width: 39rpx;
  height: 39rpx;
  margin-top: 31rpx;
  margin-right: 26rpx;
}
.person-item > text{
  float: left;
}
.person-item > view{
  float: right;
  font-family: Arial;
}

