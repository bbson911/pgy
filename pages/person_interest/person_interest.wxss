/*待结算数据*/
.wait-box{
  width: 100%;
  height: 396rpx;
  background: -webkit-linear-gradient(top, #ff7841, #ff5841);
  padding: 34rpx 30rpx;
  box-sizing: border-box;
}
.wait-box view{
  text-align: center;
  color: #ffffff;
}
.wait-box view:nth-of-type(1){
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  margin-top: 30rpx;
}
.wait-box view:nth-of-type(2){
  text-align: center;
  color: #ffffff;
  font-size: 60rpx;
  margin-top: 15rpx;
}
.wait-box view:nth-of-type(3){
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  margin-top: 82rpx;
}
.wait-box .wait-data{
  position: relative;
  width: 100%;
  height: 160rpx;
  border-radius: 5rpx;
  box-sizing: border-box;
  padding: 40rpx 0;
  font-size: 30rpx;
  color: #000000;
  display: flex;
  justify-content: space-between;
}
.wait-box .wait-data text{
  font-size: 22rpx;
}
.wait-box .wait-data .data-con{
  box-sizing: border-box;
  margin: 0 auto;
  width: 226rpx;
  text-align: center;
}
.wait-box .data-con > image{
  width: 33rpx;
  height: 33rpx;
  float: left;
  margin-right: 18rpx;
}
.wait-box .data-con > view{
  /* width: 210rpx; */
  float: left;
  line-height: 33rpx;
}
.wait-box .data-con > view > view:nth-child(1){
  margin-bottom: 14rpx;
}
.wait-box .wait-data .data-line{
  position: absolute;
  top: 44rpx;
  left: 50%;
  height: 73rpx;
  background: #eaeaea;
}
.wait-box .go-bill{
  font-size: 24rpx;
  color: #ffffff;
  text-align: right;
  margin-top: 30rpx;
}

/*订单信息*/
.order-item{
  background: #ffffff;
  border-bottom: 1rpx solid #eaeaea;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  overflow: hidden;
}
.order-item > text:first-child{
  float: left;
  margin-right: 40rpx;
}
.order-item > view:last-child{
  float: right;
  width: 510rpx;
  text-align: right;
}
.order-item input{
  line-height: 40rpx;
  height: 40rpx;
  text-align: right;
}

