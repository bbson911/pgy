/* pages/fair_result/fair_result.wxss */
page{
  background: #f2f2f2;
  padding-bottom: 100rpx;
  color: #373737;
}
button::after{
  border: 0;
}
.arrow{
  width: 18rpx;
  height: 18rpx;
  border-top: 3rpx solid #373737;
  border-right: 3rpx solid #373737;
  display: inline-block;
  transform: rotate(45deg);
  margin-left: 5rpx;
}
.price-unit{
  font-size: 20rpx;
  font-family: Arial;
}

/*支付结果*/
.order-result{
  background: #ff7841;
  padding: 40rpx 30rpx;
  width: 100%;
  height: 340rpx;
  text-align: center;
  color: #ffffff;
  margin-bottom: 10rpx;
}
.order-result > image{
  width: 118rpx;
  height: 118rpx;
}
.order-result .result-state{
  font-size: 34rpx;
  margin-top: 8rpx;
}
.order-result .result-msg{
  font-size: 24rpx;
  margin-top: 26rpx;
}

/*兑换码*/
.order-code{
  width: 100%;
  line-height: 70rpx;
  height: 70rpx;
  padding: 0 30rpx;
  margin-bottom: 10rpx;
  background: #ffffff;
  overflow: hidden;
  font-size: 28rpx;
}
.order-code > text:first-child{
  float: left;
}
.order-code > text:last-child{
  float: left;
  font-family: Arial;
}


/*商品信息*/
.order-select{
  width: 100%;
  height: 217rpx;
  padding: 25rpx 30rpx 0;
  background: #ffffff;
  font-size: 24rpx;
  border-bottom: 1rpx solid #eaeaea;
}
.order-select > image{
  width: 167rpx;
  height: 167rpx;
  float: left;
  margin-right: 25rpx;
}
.order-select .select-option{
  width: 405rpx;
  float: left;
}
.order-select .select-option .option-item{
  font-size: 18rpx;
  color: #7e7e7e;
  margin: 10rpx 0;
}
.order-select .select-option .option-item > text{
  margin-right: 30rpx;
}
.order-select .select-num{
  margin-top: 74rpx;
  float: right;
}
.order-total{
  width: 100%;
  line-height: 70rpx;
  height: 70rpx;
  padding: 0 30rpx;
  background: #ffffff;
  overflow: hidden;
  font-size: 28rpx;
  text-align: right;
}
.order-total .total-price{
  color: #ff4141;
  display: inline-block;
  font-family: Arial;
}

/*查看更多*/
.see-more{
  width: 400rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #ff894b;
  background: -webkit-linear-gradient(left, #ff894b, #ff5841);
  border: 0;
  outline: 0;
  font-size: 34rpx;
  color: #ffffff;
  border-radius: 50rpx;
  margin: 150rpx auto 30rpx;
}