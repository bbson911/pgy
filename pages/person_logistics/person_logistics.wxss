/* pages/person_logistics/person_logistics.wxss */
page{
  background: #f2f2f2;
  padding-top: 10rpx;
  font-size: 24rpx;
}
button::after{  
  border: 0;
}
.colorf78{
  color: #ff7841;
}
.clearfix {
  overflow: auto;
  _height: 1%;
}

/*物流-总览*/
.logis-total{
  width: 100%;
  height: 217rpx;
  background: #ffffff;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
}
.logis-total > image{
  float: left;
  width: 167rpx;
  height: 167rpx;
  margin-right: 25rpx;
}
.logis-total > view{
  float: left;
  width: 460rpx;
  line-height: 42rpx;
  color: #373737;
}

/*物流-详情*/
.logis-detail{
  width: 100%;
  margin-top: 10rpx;
  background: #ffffff;
  line-height: 30rpx;
  padding: 60rpx 0 30px;
}
.logis-detail .detail-item{
  position: relative;
  color: #ababab;
  padding-bottom: 30rpx;
}
.logis-detail .detail-item image{
  width: 46rpx;
  height: 46rpx;
  position: absolute;
  top: -7rpx;
  left: 114rpx;
  z-index: 2;
}
.logis-detail .item-line{
  width: 1rpx;
  height: 100%;
  background: #cfcfcf;
  position: absolute;
  top: 0;
  left: 136rpx;
  z-index: 1;
}
.logis-detail .item-con{
  width: 100%;
  font-size: 20rpx;
  padding-bottom: 30rpx;
}
.logis-detail .detail-item .item-con:nth-child(1){
  padding-bottom: 45rpx;
}
.logis-detail .detail-item .item-time{
  width: 136rpx;
  padding-right: 44rpx;
  text-align: right; 
  float: left;
  box-sizing: border-box;
}
.item-msg > view:nth-child(1){
  margin-bottom: 20rpx;
}
.logis-detail .detail-item > .item-con:nth-child(1) .item-time > view:nth-child(1){
  font-size: 24rpx;
}
.logis-detail .detail-item > .item-con:nth-child(1) .item-msg > view:nth-child(1){
  margin-bottom: 10rpx;
  font-size: 24rpx;
}
.logis-detail .detail-item .item-msg{
  float: left;
  width: 540rpx;
  padding-left: 44rpx;
}
.logis-detail .detail-item:first-child > .item-con:nth-child(1) .item-time > view:nth-child(1){
  color: #373737;
  margin-bottom: 12rpx;
}
.logis-detail .detail-item:first-child > .item-con:nth-child(1) .item-msg{
  font-size: 24rpx;
  color: #373737;
}