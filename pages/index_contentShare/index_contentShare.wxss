/* pages/index_share/index_share.wxss */

page {
  background: #f2f2f2;
}

.canvas-shade{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 100;
  overflow: hidden;
}
.canvas-wrap{
  position: fixed;
  width: 300px;
  height: 300px;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  overflow: hidden;
}
.canvas-box {
  width: 300px;
  height: 250px;
  background: #fff;

}
.canvas-save{
  width: 90px;
  height: 30px;
  margin: 10px auto 0 auto;
  line-height: 30px;
  border-radius: 30px;
  font-size: 12px;
  background: #ff7841;
  text-align: center;
  color: #fff;
}

/* 内容分享头部 */

.share-header {
  width: 100%;
  min-height: 100rpx;
  margin: 10rpx 0 0 0;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  border: 1rpx solid #eaeaea;
}

.share-header-title {
  padding: 30rpx 0 0 0;
  height: 140rpx;
  font-size: 34rpx;
  color: #373737;
}

.share-header-tab {
  width: 100%;
  height: 70rpx;
  margin: 20rpx 0 0 0;
  border: 1rpx solid #eaeaea;
  border-radius: 36rpx;
  overflow: hidden;
}

.share-header-span {
  float: left;
  width: 50%;
  height: 70rpx;
  font-size: 28rpx;
  color: #7e7e7e;
  text-align: center;
  line-height: 70rpx;
}

.share-header-span.on {
  color: #fff;
  background: linear-gradient(to right, #ff6e53, #ff915a);
}

/* 内容分享身体 */

.share-body {
  width: 100%;
  min-height: 400rpx;
  margin: 10rpx 0 0 0;
  background: #fff;
  border-bottom: 1rpx solid #eaeaea;
}

.share-body-title {
  width: 100%;
  height: 70rpx;
  padding: 0 30rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #373737;
  border-bottom: 1rpx solid #eaeaea;
}

.share-body-title-right {
  float: right;
  color: #7e7e7e;
}

.share-body-content {
  width: 100%;
  min-height: 255rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eaeaea;
}

.share-body-content-title {
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 28rpx;
  color: #373737;
}

.share-body-content-pro {
  width: 100%;
  min-height: 185rpx;
  position: relative;
}

.pro-img {
  float: left;
  width: 160rpx;
  height: 160rpx;
  margin: 0 20rpx 0 0;
  background-size: cover;
  background-position: center center;
}

.pro-title {
  font-size: 28rpx;
  color: #373737;
  margin: 0 0 10rpx 0;
}

.pro-desc {
  font-size: 24rpx;
  color: #7e7e7e;
}

.pro-sale {
  /* margin: 51rpx 0 0 0; */
  font-size: 24rpx;
  color: #373737;
  text-align: right;
  position: absolute;
  bottom: 20rpx;
  right: 0;
}

.share-body-foot {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: right;
  font-size: 28rpx;
  color: #373737;
  padding: 0 30rpx;
}

.share-body-foot text {
  color: #ff4141;
}

/* 内容分享底部 */

.share-footer {
  width: 100%;
  height: 240rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
}

.share-footer-title {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #373737;
  text-align: center;
  margin: 0 0 5rpx 0;
}

.share-icon {
  display: inline-block;
  width: 80rpx;
  background: none;
  height: 80rpx;
  margin-left: 42rpx;
}

.share-icon::after {
  border: none;
}

.share-icon.friends {
  background: url(data:image/png;base64,);
  background-size: 100% 100%;
}

.share-txt {
  margin: 5px 0 0 0;
  font-size: 24rpx;
  color: #7e7e7e;
}
