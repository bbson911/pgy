/* pages/person_accountSetting/person_accountSetting.wxss */
page{
  background: #f2f2f2;
}

/* 账户设置 */
.account-setting-wrap{
  margin: 10rpx 0;
}
.account-setting-item{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eaeaea;
  font-size: 28rpx;
  color: #373737;
}

.account-setting-fl{
  float: left;
}

.account-setting-fr{
  float: right;
}

.account-setting-fr.off{
  color: #cfcfcf;
}

.account-setting-fr.off .account-setting-arrow{
  color: #cfcfcf;
  background: url("data:image/png;base64,");
  background-size: 100% 100%;
}

.account-setting-arrow{
  float: right;
  margin: 37rpx 0 0 10rpx;
  width: 30rpx;
  height: 30rpx;
  background: url("data:image/png;base64,");
  background-size: 100% 100%;
}

.account-quit{
  width: 400rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  border-radius: 70rpx;
  margin: 150rpx auto 0 auto;
  font-size: 34rpx;
  background: linear-gradient(#ff7841,#ff5841);
}