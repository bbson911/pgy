/* pages/fair_goodsBuy/fair_goodsBuy.wxss */

page {
  background: #f2f2f2;
  
}

button::after {
  border: 0;
}

/*商品介绍*/
.goods-body {
  padding-bottom: 100rpx;
}

.goods-body .goods-pic {
  width: 750rpx;
  height: auto;
}

.goods-body .goods-pic image{
  width: 750rpx;
}

.goods-body .goods-info {
  background: #fff;
  padding: 24rpx 30rpx 20rpx 30rpx;
  margin-bottom: 10rpx;
}

.goods-info .info-name {
  font-size: 34rpx;
  color: #373737;
}

.goods-info .info-msg {
  font-size: 24rpx;
  color: #7e7e7e;
  line-height: 30rpx;
  margin-top: 15rpx;
}

.goods-info .info-price {
  text-align: right;
  color: #ff4141;
  font-family: Arial;
  font-size: 38rpx;
  margin-top: 25rpx;
}

.goods-info .price-unit {
  font-size: 30rpx;
}

/*数量规格*/

.goods-body .goods-option {
  background: #fff;
  padding: 0 30rpx;
  position: relative;
  line-height: 80rpx;
  height: 80rpx;
  overflow: hidden;
  font-size: 28rpx;
  color: #373737;
  margin-bottom: 10rpx;
}

.goods-option .arrow {
  width: 20rpx;
  height: 20rpx;
  border-top: 2rpx solid #7e7e7e;
  border-right: 2rpx solid #7e7e7e;
  position: absolute;
  right: 30rpx;
  transform: rotate(45deg);
  top: 31rpx;
}

/*商品信息*/

.goods-body .goods-details {
  width: 100%;
  background: #fff;
}

.goods-details .details-title {
  line-height: 70rpx;
  border-left: 3rpx solid #ff7841;
  padding: 0 30rpx 0 27rpx;
  font-size: 28rpx;
  color: #373737;
}

.goods-details .details-con {
  position: relative;
  z-index: 1;
}

/*底部购买*/

.bottom-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  padding: 15rpx 30rpx 15rpx 29rpx;
  box-sizing: border-box;
  z-index: 10;
}

.bottom-fixed .bottom-contact {
  width: 50%;
  float: left;
}

.bottom-fixed .bottom-buy {
  width: 250rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: -webkit-linear-gradient(left, #ff894b, #ff5841);
  border: 0;
  outline: 0;
  font-size: 34rpx;
  color: #fff;
  float: right;
  border-radius: 50rpx;
}

.bottom-fixed .bottom-contact button {
  line-height: 70rpx;
  height: 70rpx;
  float: left;
  background: #fff;
  font-size: 28rpx;
  color: #7e7e7e;
  padding: 0 15rpx;
}

.icon-img {
  width: 37rpx;
  height: 37rpx;
  margin-top: 16.5rpx;
  float: left;
}

/*弹窗*/

.popup-wrap {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 11;
}

.popup-wrap .popup-bg {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 11;
}

.popup-wrap .icon-close {
  position: absolute;
  top: 0;
  right: 0;
  width: 99rpx;
  height: 99rpx;
  z-index: 10;
}
.popup-wrap .icon-close > image{
  width: 35rpx;
  height: 35rpx;
  margin: 32rpx;
}

/*数量规格选择弹窗*/

.popup-option {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
  width: 100%;
  background: #fff;
  padding: 0 30rpx 15rpx 30rpx;
  font-size: 24rpx;
  color: #373737;
}

.popup-option .option-info {
  padding: 40rpx 0;
  border-bottom: 1rpx solid #eaeaea;
  height: 300rpx; 
  overflow: hidden;
  position: relative;
}

.popup-option .option-info .info-img {
  width: 220rpx;
  height: 220rpx;
  margin-right: 20rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
}


.popup-option .option-info .info-msg {
  position: absolute;
  bottom: 40rpx;
  left: 240rpx;
}

.popup-option .option-info .info-price {
  color: #ff4141;
  font-family: Arial;
  font-size: 28rpx;
}

.popup-option .option-info .price-unit {
  font-size: 20rpx;
}

.popup-option .option-info .info-num, .popup-option .option-info .info-select {
  float: left;
  margin-top: 10rpx;
  width: 450rpx;
  line-height: 32rpx;
  max-height: 64rpx;
  overflow: hidden;
}

.popup-option .option-item {
  padding: 10rpx 0 40rpx;
  height: 300rpx;
  overflow-y: auto;
  border-bottom: 1rpx solid #eaeaea;
}

.popup-option .option-item .item-name {
  margin-top: 30rpx;
}

.popup-option .option-item .item-val view {
  padding: 0 22rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 6rpx;
  background: #f8f8f8;
  display: inline-block;
  margin: 20rpx 20rpx 0 0;
}

.popup-option .option-item .item-val view.on {
  background: -webkit-linear-gradient(left, #ff894b, #ff5841);
  color: #fff;
}

.popup-option .option-item .item-val view.off {
  color: #dbdbdb;
}

.popup-option .option-num {
  padding: 40rpx 0;
  line-height: 46rpx;
  height: 126rpx;
}

.popup-option .option-num>text {
  float: left;
}

.popup-option .option-num>view {
  float: right;
}

.popup-option .option-num button {
  width: 46rpx;
  height: 46rpx;
  line-height: 46rpx;
  background: #eaeaea;
  padding: 0;
  float: left;
  border-radius: 0;
}

.popup-option .option-num .num-num {
  width: 132rpx;
  height: 46rpx;
  border: 1px solid #ebebeb;
  float: left;
  margin: 0 13rpx;
  text-align: center;
}

.popup-option .option-buy {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 34rpx;
  color: #fff;
  background: -webkit-linear-gradient(left, #ff894b, #ff5841);
  border-radius: 50rpx;
  margin: 5rpx auto 0;
}

.popup-option .option-item .item-val view.attr_value_active {
  color: #fff;
  background: linear-gradient(to right,#ff7241,#ff5741);
}

/*禁用属性*/
.popup-option .option-item .item-val view.attr_value_xian {
  color: #dbdbdb;
  background: #f8f8f8;
}

.disabled{
  background: #cfcfcf!important;
}