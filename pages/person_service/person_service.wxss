/* pages/person_service/person_service.wxss */
page{
  background: #f2f2f2;
  padding-top: 100rpx;
  height: 100%;
  box-sizing: border-box;
}
.price-unit{
  font-size: 20rpx;
}

/**滚动导航栏**/
.nav-ul{
  width: 100%;
  height: 80rpx;
  background: #fff;
  overflow: hidden;
  white-space: nowrap;
  border-bottom: 1rpx solid #eaeaea; 
  padding: 0 30rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-li{
  display: inline-block;
  width: auto;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 100rpx 0 0;
  text-align: center;
  color: #7e7e7e;
  font-size: 30rpx;
}
.nav-li:last-child{
  margin: 0;
}
.nav-li.on{
  color: #ff7841;
}

.article-ul{
  width: 100%;
  height: 100%;
}
.article-ul .article-li,.article-ul .article-msg{
  width: 100%;
  border-bottom: 1rpx solid #eaeaea; 
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  background: #ffffff;
}
.article-ul .article-msg{
  padding: 20rpx 30rpx 0;
  width: 100%;
  height: 70rpx;
}
.article-msg > image{
  width: 23rpx;
  height: 23rpx;
  margin-right: 15rpx;
}

/*商品信息*/
.order-select{
  position: relative;
  width: 100%;
  height: 217rpx;
  padding: 25rpx 0;
  background: #ffffff;
  
}
.order-select > image{
  width: 167rpx;
  height: 167rpx;
  float: left;
  margin-right: 25rpx;
}
.order-select .select-option{
  width: 405rpx;
  float: left;
  line-height: 30rpx;
}
.order-select .select-option .option-item{
  font-size: 18rpx;
  color: #7e7e7e;
  margin: 10rpx 0;
}
.order-select .select-option .option-item > text{
  margin-right: 30rpx;
}
.order-select .select-num{
  margin-top: 74rpx;
  float: right;
}
.order-select .select-price{
  position: absolute;
  bottom: 25rpx;
  right: 0rpx;
  font-family: Arial;
  font-size: 28rpx;
  color: #ff4141;
}

/* loading */
.loading{
  width: 100%;
  padding: 50rpx 0;
  
}
.loading image{
  display: block;
  width: 42rpx;
  height: 42rpx;
  margin: 0 auto;
  animation: circle 0.5s infinite linear;
}
@-webkit-keyframes circle{
  0%{ transform: rotate(0deg); }
  100%{ transform: rotate(360deg); }
 }

 /* 没有更多数据 */
 .noMoreData{
   width: 100%;
   text-align: center;
   font-size: 24rpx;
   color: #999;
   line-height: 80rpx;
   height: 80rpx;
 }

/* 暂无数据 */
.noData{
  padding: 130rpx 0 0 0;
  text-align: center;
}
.noData image{
  display: block;
  margin: 0 auto;
  width: 270rpx;
  height: 230rpx;
}
.noData text{
  font-size: 28rpx;
  color: #373737;
}