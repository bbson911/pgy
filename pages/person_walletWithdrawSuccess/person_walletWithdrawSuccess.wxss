/* pages/person_walletWithdrawSuccess/person_walletWithdrawSuccess.wxss */

page{
  background: #f2f2f2;
}

.withdraw-success{
  width: 100%;
  height: 340rpx;
  background: linear-gradient(#ff7841,#ff5841);
  overflow: hidden;
}

.success{
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin: 85rpx auto 20rpx auto;
}

.success-txt{
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}

.withdraw-li{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  background: #fff;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #373737;
  border-bottom: 1rpx solid #eaeaea;
}

.left{
  float: left;
}

.right{
  float: right;
}

.withdraw-back{
  width: 400rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin: 150rpx auto 0 auto;
  border-radius: 70rpx;
  color: #fff;
  font-size: 34rpx;
  background: linear-gradient(to right, #ff8441, #ff5841);
}