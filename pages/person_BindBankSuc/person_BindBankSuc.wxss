/* pages/person_BindBankSuc/person_BindBankSuc.wxss */

page{
  background: #f2f2f2;
  color: #373737;
}
button::after{
  border: 0;
}
.arrow{
  width: 18rpx;
  height: 18rpx;
  border-top: 3rpx solid #ffffff;
  border-right: 3rpx solid #ffffff;
  display: inline-block;
  transform: rotate(45deg);
  margin-left: 5rpx;
}

/* 银行卡 */
.bankCard{
  width: 100%;
  height:400rpx;
  background: #f2f2f2;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
}
.bankCard .changeCard{
  width: 690rpx;
  height: 341rpx;
  position: relative;
}
.bankCard .changeCard image{
  width: 100%;
  height: 100%;
}
.changeCard > view{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.bankCard .bankName{
  color: #ffffff;
  font-size: 28rpx;
  margin-left: 132rpx;
   margin-top: 45rpx; 
}
.bankCard .bankNumber{
  color: #ffffff;
  font-size: 38rpx;
  margin-left: 116rpx;
  margin-top: 40rpx;
  letter-spacing: 3rpx;
}

.bankCard .changeBtn{
  font-size: 28rpx;
  color: #ffffff;
  margin-top: 64rpx;
  text-align: right;
  padding: 0 40rpx;
}

/* 联系客服 */
.contact-us{
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 80rpx;
  left: 0;
  right: 0;
  outline: 0;
  border: 0;
  background: none;
  margin: 0;
  padding: 0;
}
.contact-us > image{
  width: 39rpx;
  height: 39rpx;
  position: relative;
  top: 8rpx;
}
.contact-us > text{
  font-size: 28rpx;
  margin-left: 20rpx;
}